{
  "name": "octokit-plugin-rename-branch",
  "version": "0.0.0-development",
  "description": "Octokit plugin to rename a branch in a github repository, its settings, and its code.",
  "main": "index.js",
  "scripts": {
    "build": "pika build",
    "coverage": "nyc report --reporter=html && open coverage/index.html",
    "lint": "prettier --check '{src,test}/**/*.{ts,md}' *.md package.json tsconfig.json",
    "lint:fix": "prettier --write '{src,test}/**/*.{ts,md}' *.md package.json tsconfig.json",
    "pretest": "npm run -s lint",
    "test": "jest --coverage"
  },
  "keywords": [
    "octokit",
    "plugin",
    "github",
    "branch"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "license": "MIT",
  "devDependencies": {
    "@octokit/core": "^3.0.0",
    "@octokit/plugin-paginate-rest": "^2.0.1",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.12",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.0",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "repository": "https://github.com/gr2m/octokit-plugin-rename-branch",
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  }
}
